    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            overflow: auto;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
            }
        /* Clase para el estado visible del menú lateral */
        .sidebar {
            width: 250px; /* El ancho que necesites */
            transition: width 0.3s ease;
        }

        /* Clase para el estado oculto del menú lateral */
        .sidebar-hidden {
            width: 0;
            transition: width 0.3s ease;
        }

        /* Ajustes para el contenido principal */
        .main-content {
            margin-left: 250px; /* Ajustar el margen cuando el menú está visible */
            transition: margin-left 0.3s ease;
        }

            .main-content.sidebar-hidden {
                margin-left: 0; /* Ajustar cuando el menú está oculto */
            }

    </style>
</head>
